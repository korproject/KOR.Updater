<Window x:Class="KOR_Updater_Demo_Main_WPF_App.FeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FeedbackWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="Comment" Text="What do you think about this update?" Height="100" Margin="5"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Your Point:" Margin="5"/>
                <!--Example used slider, you can use custom star bar-->
                <Slider x:Name="Point" Maximum="10" Minimum="0" SmallChange="1" Value="5" AutoToolTipPlacement="TopLeft" TickPlacement="BottomRight" Width="200" Margin="5"/>
            </StackPanel>
            <Button Content="Send Your Review" Margin="5" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
